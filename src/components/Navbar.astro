<header class="bg-primary shadow-md py-4">
  <nav class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold text-white">ACM Student Chapter</h1>

      <!-- Mobile menu button with animated icon -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-white relative w-6 h-6 z-50"
        aria-label="Menu"
      >
        <span
          class="block absolute h-0.5 w-6 bg-white transform transition-all duration-300 ease-in-out -translate-y-2"
        ></span>
        <span
          class="block absolute h-0.5 w-6 bg-white transform transition-all duration-300 ease-in-out translate-y-0"
        ></span>
        <span
          class="block absolute h-0.5 w-6 bg-white transform transition-all duration-300 ease-in-out translate-y-2"
        ></span>
      </button>

      <!-- Desktop menu -->
      <ul class="hidden md:flex space-x-6 text-white">
        <li>
          <a href="/" class="hover:text-accent transition-colors">Home</a>
        </li>
        <li>
          <a href="#about" class="hover:text-accent transition-colors">About</a>
        </li>
        <li>
          <a href="#events" class="hover:text-accent transition-colors"
            >Events</a
          >
        </li>
        <li>
          <a href="#contact" class="hover:text-accent transition-colors"
            >Contact</a
          >
        </li>
      </ul>
    </div>

    <!-- Mobile menu - Sliding from right -->
    <div
      id="mobile-menu"
      class="fixed top-0 right-0 w-1/2 h-full bg-primary shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out md:hidden"
      style="z-index: 40;"
    >
      <div class="pt-20 px-6">
        <ul class="flex flex-col space-y-6 text-white">
          <li>
            <a
              href="/"
              class="block text-lg hover:text-accent transition-colors">Home</a
            >
          </li>
          <li>
            <a
              href="#about"
              class="block text-lg hover:text-accent transition-colors">About</a
            >
          </li>
          <li>
            <a
              href="#events"
              class="block text-lg hover:text-accent transition-colors"
              >Events</a
            >
          </li>
          <li>
            <a
              href="#contact"
              class="block text-lg hover:text-accent transition-colors"
              >Contact</a
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Overlay -->
    <div
      id="overlay"
      class="fixed inset-0 bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden z-30"
    >
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");
  const overlay = document.getElementById("overlay");
  const spans = mobileMenuButton?.querySelectorAll("span");

  function toggleMenu() {
    spans?.forEach((span, index) => {
      if (index === 0) {
        span.classList.toggle("rotate-45");
        span.classList.toggle("translate-y-2.5");
        span.classList.toggle("-translate-y-2");
      } else if (index === 1) {
        span.classList.toggle("opacity-0");
      } else if (index === 2) {
        span.classList.toggle("-rotate-45");
        span.classList.toggle("translate-y-2.5");
        span.classList.toggle("translate-y-2");
      }
    });

    mobileMenu?.classList.toggle("translate-x-full");
    overlay?.classList.toggle("opacity-0");
    overlay?.classList.toggle("pointer-events-none");
    document.body.classList.toggle("overflow-hidden");
  }

  mobileMenuButton?.addEventListener("click", toggleMenu);
  overlay?.addEventListener("click", toggleMenu);

  const mobileMenuLinks = mobileMenu?.querySelectorAll("a");
  mobileMenuLinks?.forEach((link) => {
    link.addEventListener("click", toggleMenu);
  });
</script>
